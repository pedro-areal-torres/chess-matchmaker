{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"],
      "@constants/*": ["src/constants/*"],
      "@types/*": ["src/types/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
